<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="8dp"
    android:layout_height="match_parent">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <LinearLayout
                android:id="@+id/liner_layout_waste2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/heading_back"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="128dp"
                    android:layout_height="60sp"
                    android:padding="8dp"
                    android:text="State Name"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="193dp"
                    android:layout_height="60sp"
                    android:layout_weight="1"
                    android:padding="8dp"
                    android:text="Institute Name"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="112dp"
                    android:layout_height="60sp"
                    android:layout_weight="1"
                    android:padding="8dp"
                    android:text="City"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="138dp"
                    android:layout_height="60sp"
                    android:layout_weight="1"
                    android:padding="8dp"
                    android:text="Type"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="133dp"
                    android:layout_height="60sp"
                    android:layout_weight="1"
                    android:padding="8dp"
                    android:text="Admission Capacity"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="122dp"
                    android:layout_height="60sp"
                    android:layout_weight="1"
                    android:padding="8dp"
                    android:text="Hospital Beds"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_college"
                android:layout_marginTop="6dp"
                android:layout_below="@+id/liner_layout_waste2"
                android:layout_width="826dp"
                tools:listitem="@layout/item_college"
                android:layout_height="match_parent" />
        </RelativeLayout>
    </HorizontalScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>